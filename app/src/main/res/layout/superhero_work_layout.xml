<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_appearance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/default_start_end_padding_mid"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:id="@+id/tvWork_occupation_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/work_occupation"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvWork_occupation_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_bottom_padding"
            android:justificationMode="inter_word"
            android:inputType="textMultiLine"
            android:textAppearance="?attr/textAppearanceBody2"
            />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:id="@+id/tvWork_base_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/work_base"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tvWork_base_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:justificationMode="inter_word"
            android:inputType="textMultiLine"
            android:autoSizeTextType="uniform"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constraintLeft_toRightOf="@id/tvWork_base_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>